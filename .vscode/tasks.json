{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"test"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$tsc"
			],
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"test:coverage"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"close": true
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Watch Tests",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"test:watch"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Build Project",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$tsc",
				"$eslint-stylish"
			]
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": ".*Local:.*"
				}
			}
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"lint"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Fix Lint Issues",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"lint:fix"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "npx.cmd",
			"args": [
				"tsc",
				"--noEmit"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"install"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Clean Install",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"ci"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Run All Quality Checks",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"lint"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"dependsOrder": "sequence",
			"dependsOn": [
				"Type Check",
				"Lint Code",
				"Run Tests with Coverage"
			]
		},
		{
			"label": "Install zod",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"install"
			],
			"group": "build"
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "npx.cmd",
			"args": [
				"tsc",
				"--noEmit"
			],
			"group": "test"
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"test:coverage"
			],
			"group": "test"
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"test:coverage"
			],
			"group": "test"
		},
		{
			"label": "Run Tests with Coverage",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"test:coverage"
			],
			"group": "test"
		},
		{
			"label": "List Failing Tests",
			"type": "shell",
			"command": "npx.cmd",
			"args": [
				"jest",
				"--onlyFailures",
				"--listTests"
			],
			"group": "test"
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "npx",
			"args": [
				"tsc",
				"--noEmit"
			],
			"group": "test"
		},
		{
			"label": "Type Check",
			"type": "shell",
			"command": "npx.cmd",
			"args": [
				"tsc",
				"--noEmit"
			],
			"group": "test"
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"lint"
			],
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "test"
		}
	]
}