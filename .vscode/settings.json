{
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "json": true
  },
  "github.copilot.advanced": {
    "length": 3000,
    "temperature": 0.1,
    "top_p": 1,
    "inlineSuggestEnable": true
  },
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.localeOverride": "en",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "files.associations": {
    "*.md": "markdown",
    "copilot-instructions.md": "markdown"
  },
  "emmet.includeLanguages": {
    "typescriptreact": "html",
    "javascriptreact": "html"
  },
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "typescript",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.experimental.classRegex": [
    [
      "cn\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  "task.allowAutomaticTasks": "on",
  "task.quickOpen.history": 10,
  "task.saveBeforeRun": "always",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "jest.autoRun": {
    "watch": true,
    "onStartup": [
      "all-tests"
    ]
  },
  "jest.showCoverageOnLoad": true,
  "testing.automaticallyOpenPeekView": "never",
  "testing.followRunningTest": false,
  "testing.openTesting": "neverOpen",
  "testing.automaticallyOpenTestResults": "neverOpen",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.confirmOnKill": "always",
  "chat.tools.terminal.autoApprove": {
    "npm test": true,
    "npm test --": true,
    "npm test -- *": true,
    "npm run test": true,
    "npm run test:*": true,
    "npm run test --": true,
    "npm run test -- *": true,
    "npm run build": true,
    "npm run dev": true,
    "npm run start": true,
    "npm run lint": true,
    "npm run lint:fix": true,
    "npm run type-check": true,
  "npx test": true,
  "npx test*": true,
  "npx jest": true,
  "npx jest*": true,
    "npm install": true,
    "npm ci": true,
    "npm audit": true,
    "npm audit fix": true,
    "npm outdated": true,
    "git status": true,
    "git log --oneline": true,
    "git log --graph --oneline --all": true,
    "git diff": true,
    "git branch": true,
    "git show": true,
    "git ls-files": true,
    "ls": true,
    "ls -la": true,
    "pwd": true,
    "node --version": true,
    "npm --version": true,
    "which node": true,
    "which npm": true,
    "npm run preview": true,
    "npm run format": true,
    "cat *": true,
    "head *": true,
    "tail *": true,
    "grep * *": true,
    "find . -name *": true,
    "wc -l *": true,
    "echo $*": true,
    "env | grep *": true
  },
  "chat.tools.terminal.requireApproval": {
    "enabled": true,
    "promptMessage": "This command requires approval. Would you like me to add it to the auto-approval list for future use? Execute command?",
    "rememberApproval": true,
    "dangerousCommands": [
      "rm -rf *",
      "git reset --hard *",
      "git push --force *",
      "npm run deploy*",
      "vercel --prod*",
      "sudo *",
      "chmod *",
      "chown *",
  "mv *",
      "cp * /*"
    ]
  }
}